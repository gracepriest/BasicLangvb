{
  "comments": {
    "lineComment": "'",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(Sub|Function|Class|If|For|While|Do|Select|Try|With|Module|Namespace|Interface|Enum|Structure|Property)\\b",
      "end": "^\\s*(End\\s+(Sub|Function|Class|If|Select|Try|With|Module|Namespace|Interface|Enum|Structure|Property)|Next|Wend|Loop)\\b"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(Sub|Function|Class|If|Else|ElseIf|For|While|Do|Select|Case|Try|Catch|Finally|With|Module|Namespace|Interface|Enum|Structure|Property|Get|Set)\\b.*$",
    "decreaseIndentPattern": "^\\s*(End\\s+(Sub|Function|Class|If|Select|Try|With|Module|Namespace|Interface|Enum|Structure|Property)|Else|ElseIf|Case|Catch|Finally|Next|Wend|Loop)\\b.*$"
  }
}
