{
  "name": "basiclang",
  "displayName": "BasicLang",
  "description": "Language support for BasicLang programming language",
  "version": "0.1.0",
  "publisher": "basiclang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:basiclang",
    "onDebug",
    "onDebugResolve:basiclang"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "basiclang",
        "aliases": [
          "BasicLang",
          "basiclang",
          "bas"
        ],
        "extensions": [
          ".bas",
          ".basic",
          ".bl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "basiclang",
        "scopeName": "source.basiclang",
        "path": "./syntaxes/basiclang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "basiclang",
        "path": "./snippets/basiclang.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "basiclang",
        "scopes": {
          "namespace": ["entity.name.namespace.basiclang"],
          "type": ["entity.name.type.basiclang"],
          "class": ["entity.name.type.class.basiclang"],
          "enum": ["entity.name.type.enum.basiclang"],
          "interface": ["entity.name.type.interface.basiclang"],
          "struct": ["entity.name.type.struct.basiclang"],
          "typeParameter": ["entity.name.type.parameter.basiclang"],
          "parameter": ["variable.parameter.basiclang"],
          "variable": ["variable.other.basiclang"],
          "variable.readonly": ["variable.other.constant.basiclang"],
          "property": ["variable.other.property.basiclang"],
          "enumMember": ["variable.other.enummember.basiclang"],
          "function": ["entity.name.function.basiclang"],
          "function.defaultLibrary": ["support.function.builtin.basiclang"],
          "method": ["entity.name.function.member.basiclang"],
          "keyword": ["keyword.control.basiclang"],
          "modifier": ["storage.modifier.basiclang"],
          "comment": ["comment.basiclang"],
          "string": ["string.quoted.double.basiclang"],
          "number": ["constant.numeric.basiclang"],
          "operator": ["keyword.operator.basiclang"]
        }
      }
    ],
    "commands": [
      {
        "command": "basiclang.restartServer",
        "title": "BasicLang: Restart Language Server"
      },
      {
        "command": "basiclang.showOutput",
        "title": "BasicLang: Show Output"
      },
      {
        "command": "basiclang.build",
        "title": "BasicLang: Build"
      },
      {
        "command": "basiclang.run",
        "title": "BasicLang: Run"
      },
      {
        "command": "basiclang.buildAndRun",
        "title": "BasicLang: Build and Run"
      },
      {
        "command": "basiclang.formatDocument",
        "title": "BasicLang: Format Document"
      },
      {
        "command": "basiclang.selectBackend",
        "title": "BasicLang: Select Backend"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BasicLang",
      "properties": {
        "basiclang.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the BasicLang compiler executable. If empty, uses 'dotnet run' in the project directory."
        },
        "basiclang.server.projectPath": {
          "type": "string",
          "default": "",
          "description": "Path to the BasicLang compiler project directory (for dotnet run)."
        },
        "basiclang.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "basiclang.compiler.backend": {
          "type": "string",
          "enum": [
            "csharp",
            "javascript",
            "python",
            "llvm"
          ],
          "default": "csharp",
          "description": "Code generation backend to use for compilation."
        },
        "basiclang.compiler.outputPath": {
          "type": "string",
          "default": "./out",
          "description": "Output directory for compiled files."
        },
        "basiclang.compiler.optimizationLevel": {
          "type": "string",
          "enum": [
            "none",
            "basic",
            "aggressive"
          ],
          "default": "basic",
          "description": "Optimization level for code generation."
        },
        "basiclang.compiler.generateDebugInfo": {
          "type": "boolean",
          "default": true,
          "description": "Generate debug information in compiled output."
        },
        "basiclang.compiler.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict type checking and compilation."
        },
        "basiclang.compiler.warnings": {
          "type": "boolean",
          "default": true,
          "description": "Show compiler warnings."
        },
        "basiclang.format.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation."
        },
        "basiclang.format.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Use spaces instead of tabs."
        }
      }
    },
    "breakpoints": [
      {
        "language": "basiclang"
      }
    ],
    "debuggers": [
      {
        "type": "basiclang",
        "label": "BasicLang Debug",
        "languages": ["basiclang"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the BasicLang file to debug",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop on the first line",
                "default": true
              },
              "backend": {
                "type": "string",
                "enum": ["csharp", "javascript", "python", "llvm"],
                "description": "Backend to use for compilation",
                "default": "csharp"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Working directory",
                "default": "${workspaceFolder}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "basiclang",
            "request": "launch",
            "name": "Debug BasicLang",
            "program": "${file}",
            "stopOnEntry": true,
            "backend": "csharp"
          }
        ],
        "configurationSnippets": [
          {
            "label": "BasicLang: Launch",
            "description": "Launch and debug a BasicLang program",
            "body": {
              "type": "basiclang",
              "request": "launch",
              "name": "Debug BasicLang",
              "program": "^\"${1:${file}}\"",
              "stopOnEntry": true,
              "backend": "csharp"
            }
          },
          {
            "label": "BasicLang: Launch with Backend",
            "description": "Launch and debug a BasicLang program with specific backend",
            "body": {
              "type": "basiclang",
              "request": "launch",
              "name": "Debug BasicLang (${2:backend})",
              "program": "^\"${1:${file}}\"",
              "stopOnEntry": false,
              "backend": "^\"${2|csharp,javascript,python,llvm|}\""
            }
          }
        ]
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "@vscode/debugadapter": "^1.65.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0"
  }
}
